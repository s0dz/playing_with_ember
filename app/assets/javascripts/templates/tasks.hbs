<table class="table">
  <tbody>
    {{#each tasks itemController='task'}}
      <tr {{bind-attr class="completed"}}>
        <td>{{input type=checkbox checked=completed}}</td>
        <td>{{name}}</td>
        <td><button class="btn btn-default" {{action deleteTask this}}>Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>